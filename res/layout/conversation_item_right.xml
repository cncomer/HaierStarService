<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >
    <ImageButton android:id="@+id/avator"
        android:layout_height="48dip"
        android:layout_width="48dip"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"/>

    <TextView android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="120dip"
        android:layout_toLeftOf="@+id/avator"
        android:layout_marginTop="4dip"
        android:gravity="center_vertical|right"
        android:layout_marginLeft="6dip"
        android:text="name"/>
    
    <TextView android:id="@+id/content"
        android:layout_below="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="60dip"
        android:text="dsa dsa dsa dsa ds a dsa dsa dsa d sa dsa dsa d sa dsa ds a dsa dsa ds a dsa ds ad sa dsa d sa dsa das d sa dsa dsa  da dsa ds ad"
        />
    <TextView android:id="@+id/date"
        android:layout_below="@+id/content"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:textColor="@color/blk_translucent"
        android:text="1998年8月13日 16：34"/>
</RelativeLayout>
