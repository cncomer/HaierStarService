<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >

   <ImageView
        android:id="@+id/title_logo"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_title_logo_height"
        android:scaleType="center"
        android:background="#ffff7872"
        android:src="@drawable/top_login_icon" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_weight="1.0"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ProductInfo"
                    android:layout_width="match_parent"
                    android:singleLine="false"
                    android:text="@string/register_tips" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/usr_tel"
                    style="@style/ProductInfoInputNew"
                    android:hint="@string/usr_tel_hint" />
                
			    <Button android:id="@+id/button_getyanzhengma"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/DefaultShapeButton.Red"
			        android:text="@string/title_get_usr_validate"
			        android:layout_gravity="center"
			        android:padding="6dip"/>
            </LinearLayout>

            <EditText android:gravity="center_vertical"
                    android:id="@+id/usr_validate"
                    style="@style/ProductInfoInputValidate"
                    android:layout_width="150dp"
                    android:enabled="true"
                    android:hint="@string/usr_validate"/>

            
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="30dip"
                android:layout_marginBottom="30dip"
                android:background="@color/light_gray" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="156dip"
                android:layout_height="42dip"
                android:layout_gravity="right"
                android:layout_marginBottom="60dip"
                android:background="@drawable/default_black_btn"
                android:gravity="center"
                android:text="@string/button_next"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>