<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dip"
    android:orientation="horizontal" >
    <ImageView android:id="@+id/avator"
        android:layout_width="@dimen/preview_image_view_size"
        android:layout_height="@dimen/preview_image_view_size"
        android:scaleType="fitCenter"/>

    <LinearLayout android:layout_width="0dip"
        android:layout_weight="1.0"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
        <TextView android:id="@+id/tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff404040"
            android:textSize="16sp"
            android:singleLine="true"
            android:text="@string/product_debug_placeholder"/>
        <TextView android:id="@+id/pinpai"
            android:layout_marginTop="4dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffc0c0c0"
            android:singleLine="true"
            android:text="@string/product_debug_placeholder"/>
        <TextView android:id="@+id/xinghao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffc0c0c0"
            android:singleLine="true"
            android:text="@string/product_debug_placeholder"/>
    </LinearLayout>
    
    <FrameLayout android:layout_width="wrap_content"
        android:layout_margin="4dip"
        android:id="@+id/component"
    	android:layout_height="wrap_content">
       <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/baoxiu_component"
	        android:scaleType="fitCenter"/>
       <TextView android:id="@+id/title2"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/wt"
           android:singleLine="true"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="2dip"
           />
    </FrameLayout>
    
    <FrameLayout android:layout_width="wrap_content"
        android:layout_margin="4dip"
    	android:layout_height="wrap_content">

       <TextView
           android:id="@+id/zhengji"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:scaleType="fitCenter"
           android:background="@drawable/baoxiu_zhengji"
           android:text="3650å¤©"
           android:textColor="@color/wt"
           android:textSize="12sp" />

    </FrameLayout>
    
</LinearLayout>
