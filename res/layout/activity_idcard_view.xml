<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="fill_parent"
        android:layout_height="205dip"
        android:scaleType="center" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip"
            android:background="@drawable/gray_boder"
            android:orientation="vertical"
            android:padding="13dip" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/avator"
                    android:layout_width="67dip"
                    android:layout_height="67dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/baoxiuka_avator_default" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/avator"
                    android:layout_toRightOf="@+id/avator"
                    android:background="#ff346fb7"
                    android:gravity="center"
                    android:minHeight="30dip"
                    android:minWidth="100dip"
                    android:text="销售顾问"
                    android:textColor="@color/wt"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/button_edit"
                    android:layout_width="25dip"
                    android:layout_height="37dip"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit_icon" />
            </RelativeLayout>

            <!-- name -->
            <LinearLayout 
                android:layout_marginTop="6dip"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp"
                    android:text="@string/card_name" />

                <EditText
                    android:background="@null"
                    android:id="@+id/name"
                    android:layout_marginLeft="4dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_name"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp" />
            </LinearLayout>
            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ffcdcdcd"/>
            
            <!-- tel -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp"
                    android:text="@string/card_tel" />

                <EditText
                    android:background="@null"
                    android:id="@+id/tel"
                     android:layout_marginLeft="4dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_tel"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp" />
            </LinearLayout>
            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ffcdcdcd"/>
            
             <!-- org -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp"
                    android:text="@string/card_org" />

                <EditText
                    android:background="@null"
                    android:id="@+id/org"
                     android:layout_marginLeft="4dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_org"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp" />
            </LinearLayout>
            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ffcdcdcd"/>
            
            <!-- workplace -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp"
                    android:text="@string/card_workplace" />

                <EditText
                    android:background="@null"
                    android:id="@+id/workplace"
                     android:layout_marginLeft="4dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_workplace"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp" />
            </LinearLayout>
            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ffcdcdcd"/>
            
            <!-- pinpai -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp"
                    android:text="@string/card_pinpai" />

               <EditText
                    android:background="@null"
                    android:id="@+id/pinpai"
                     android:layout_marginLeft="4dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_pinpai"
                    android:textColor="#ff5a5a5a"
                    android:textSize="16sp" />
            </LinearLayout>
            <View android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ffcdcdcd"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>