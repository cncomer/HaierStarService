<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="17dip"
    android:paddingTop="12dip"
    android:paddingRight="12dip"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="12dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox android:id="@+id/checkbox"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/history_title"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="hedsada"
            android:textSize="16sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="#ff5a5a5a"
            android:text="hedsada"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </LinearLayout>

    <TextView
        android:id="@+id/history_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dip"
        android:layout_marginRight="4dip"
        android:textColor="#ff5a5a5a"
        android:textSize="14sp"
        android:text="hedsada dsa dsa das dsa dsa dsa dsa dsa dsa ds ad sa dsa da dsa dsa dsa dsa dsa dsa ds ad sa d asd sa ds ad sa d sad as dsa d sa  ds"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>