<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="horizontal" >
    <TextView
        style="@style/ProductInfo"
        android:text="@string/product_buy_entry" />
    <EditText     
        android:id="@+id/edit_product_buy_tujing"
        style="@style/ProductInfoInput"
        android:layout_width="fill_parent"
    	android:inputType="none"/>
    <Button android:id="@+id/menu_choose_tujing"
        android:layout_width="wrap_content"
        android:text="@string/menu_choose"
        style="@style/DefaultShapeButton"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:textSize="12sp"
        android:layout_height="30dip"/>
</LinearLayout>