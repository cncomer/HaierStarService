<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <!-- scan layout -->
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff52c141"
        android:padding="8dip"
        android:orientation="horizontal">
        <ImageView android:layout_width="36dip"
            android:layout_height="36dip"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:id="@+id/scan_iamge"
            android:src="@drawable/title_scan_qr"/>
        <LinearLayout android:layout_marginLeft="10dip"
	            android:layout_toRightOf="@+id/scan_iamge"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:orientation="vertical">
            <TextView android:textColor="#ff000000"
	            android:layout_width="wrap_content"
	            android:text="@string/title_scan_desc1"
	            android:layout_marginBottom="1dip"
	            android:layout_height="wrap_content"/>
	        <TextView android:textColor="#ff000000"
	            android:layout_width="wrap_content"
	            android:text="@string/title_scan_desc2"
	            android:layout_height="wrap_content"/>
        </LinearLayout>
       <Button android:id="@+id/button_scan_qrcode"
           android:layout_alignParentRight="true"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_marginRight="10dip"
            android:padding="6dip"
            android:textSize="16sp"
           android:background="@drawable/default_black_btn"
           android:textColor="#ffffffff"
           android:text="@string/title_scan_button"/>
    </RelativeLayout>

    <View android:background="@color/light_gray"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dip"/>

    <ScrollView android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="@dimen/title_my_product_left_margin"
        android:layout_marginRight="@dimen/title_my_product_left_margin"
        android:layout_marginTop="10dip"
        android:layout_weight="1.0"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <include layout="@layout/product_create_info"/>
            <include layout="@layout/people_contact_info"/>
		    <include layout="@layout/pcd_edit_layout" />
            <include layout="@layout/yuyue_info_layout"
                android:layout_marginTop="10dip"/>
            

            <!-- modify by chenkai, 增加id,在不同的Activity中可以通过id找到View而重新设置text begin -->
			<TextView style="@style/PeopleInfo"
			    android:id="@+id/desc"
	        	android:text="@string/error_des" />
			<!-- modify by chenkai, 增加id,在不同的Activity中可以通过id找到View而重新设置text end -->

            <EditText
                android:id="@+id/product_ask_online_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/light_gray"
                android:gravity="left|top"
                android:maxHeight="300dip"
                android:maxLength="1024"
                android:minLines="4" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/default_color_button_height"
                    android:layout_height="@dimen/default_color_button_height"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_voice" />

                <Button
                    android:id="@+id/button_speak"
                    style="@style/DefaultShapeButton.Red"
                    android:layout_width="180dip"
                    android:layout_marginLeft="10dip"
                    android:text="@string/button_speek" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/default_color_button_height"
                    android:layout_height="@dimen/default_color_button_height"
                    android:scaleType="fitCenter"
                    android:visibility="invisible"
                    android:src="@drawable/ic_voice" />

                <Button
                    android:id="@+id/button_save"
                    style="@style/DefaultShapeButton"
                    android:layout_width="180dip"
                    android:layout_marginLeft="10dip"
                    android:text="@string/button_yuyue_repair" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="60dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>