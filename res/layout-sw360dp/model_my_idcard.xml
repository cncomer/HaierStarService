<?xml version="1.0" encoding="utf-8"?>
<com.bestjoy.app.haierstartservice.view.ModuleView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dip"
    android:layout_height="80dip"
    android:background="@drawable/model_my_idcard"
    android:layout_marginTop="10dip"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:orientation="vertical" >
    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:textColor="@color/wt"
        android:textStyle="bold"
        android:text="@string/model_my_idcard"/>

    <TextView 
        android:id="@+id/new_flag"
        android:layout_height="50dip"
        android:layout_width="50dip"
        android:textSize="16sp"
        android:gravity="right"
        android:paddingRight="4dip"
        android:paddingTop="9dip"
        android:background="@drawable/model_my_business_new"
        android:textColor="#ff084309"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="99"/>
</com.bestjoy.app.haierstartservice.view.ModuleView>
